<!-- Layout for a preference with a summary and an image above the summary. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/custom_image_preference_paddingVertical"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables"
    style="@style/PreferenceLayout">

    <ImageView
        android:id="@android:id/icon"
        android:layout_width="@dimen/custom_image_preference_icon_size"
        android:layout_height="@dimen/custom_image_preference_icon_size"
        android:layout_marginBottom="@dimen/custom_image_preference_icon_marginBottom"
        android:importantForAccessibility="no" />

    <TextView
        android:id="@android:id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/PreferenceSummary" />

</LinearLayout>
